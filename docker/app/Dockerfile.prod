# Production Dockerfile - Multi-stage build

# Stage 1: Build
FROM node:24.10-trixie AS builder

WORKDIR /workspaces

COPY package*.json ./

RUN npm ci --only=production --ignore-scripts

COPY package*.json ./
RUN npm install

COPY . .

RUN npm run build

# Stage 2: Production
FROM nginx:trixie-slim

COPY --from=builder /workspaces/dist /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
